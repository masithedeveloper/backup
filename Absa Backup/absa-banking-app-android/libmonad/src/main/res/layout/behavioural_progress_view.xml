<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/dark_grey"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <ProgressBar
        android:id="@+id/rewardsProgressBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="@dimen/_8sdp"
        android:layout_marginTop="@dimen/double_medium_space"
        android:progressDrawable="@drawable/behavioural_progress_bar_drawable"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressTextView"
        tools:progress="60" />

    <TextView
        android:id="@+id/progressTextView"
        style="@style/NormalTextMediumLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/your_progress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/progressAmountTextView"
        style="@style/NormalTextRegularLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/tiny_space"
        app:layout_constraintBottom_toTopOf="@id/rewardsProgressBar"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="60%" />
</merge>
