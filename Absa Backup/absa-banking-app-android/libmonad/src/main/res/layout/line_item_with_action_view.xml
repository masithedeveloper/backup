<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <TextView
        android:id="@+id/labelTextView"
        style="@style/SmallTextMediumDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/medium_space"
        app:layout_constraintBaseline_toBaselineOf="@id/actionTextView"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Heading" />

    <TextView
        android:id="@+id/actionTextView"
        style="@style/NormalTextMediumDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/medium_space"
        android:paddingTop="@dimen/small_space"
        android:paddingEnd="@dimen/medium_space"
        android:paddingBottom="@dimen/small_space"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Action" />
</merge>