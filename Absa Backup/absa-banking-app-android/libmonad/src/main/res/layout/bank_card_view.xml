<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/medium_space"
    android:layout_marginEnd="@dimen/medium_space"
    android:background="@drawable/ic_wealth_horizontal"
    android:minHeight="@dimen/large_card_min_height"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <ImageView
        android:id="@+id/absaImageView"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_marginTop="@dimen/medium_space"
        android:layout_marginEnd="@dimen/large_space"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_absa_full_logo_white" />

    <TextView
        android:id="@+id/cardNameTextView"
        style="@style/SmallTextRegularLight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/double_medium_space"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/cardNumberTextView"
        tools:text="CVP MAHLANGU" />

    <TextView
        android:id="@+id/cardNumberTextView"
        style="@style/LargeTextRegularLight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/large_space"
        android:layout_marginBottom="@dimen/small_space"
        app:layout_constraintBottom_toTopOf="@+id/cardNameTextView"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="4901 2345 5678 3945" />

</merge>