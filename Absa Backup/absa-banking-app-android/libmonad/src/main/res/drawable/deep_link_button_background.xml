<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="300" android:exitFadeDuration="300">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/messages_button_rounded_radius" />
            <solid android:color="@color/light_silver" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/messages_button_rounded_radius" />
            <solid android:color="@color/grey" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/messages_button_rounded_radius" />
            <solid android:color="@color/in_app_message_background" />
        </shape>
    </item>
</selector>