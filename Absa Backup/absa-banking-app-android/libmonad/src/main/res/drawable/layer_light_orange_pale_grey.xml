<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:angle="135"
                android:endColor="@color/light_purple"
                android:startColor="@color/warm_purple" />
            <corners android:radius="@dimen/tiny_space" />
        </shape>
    </item>
    <item android:left="@dimen/small_space">
        <shape>
            <solid android:color="@color/silver_grey" />
            <corners
                android:bottomRightRadius="@dimen/tiny_space"
                android:topRightRadius="@dimen/tiny_space" />
        </shape>
    </item>
</layer-list>