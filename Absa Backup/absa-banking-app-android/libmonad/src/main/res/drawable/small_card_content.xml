<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:endColor="@android:color/black"
                android:startColor="@color/warm_grey"
                android:type="linear" />
            <size
                android:width="@dimen/small_card_width"
                android:height="@dimen/small_card_height" />
            <corners android:radius="@dimen/normal_radius" />
        </shape>
    </item>
    <item
        android:bottom="24dp"
        android:top="6dp">
        <shape android:shape="rectangle">
            <size android:height="8dp" />
            <solid android:color="@color/grey" />
        </shape>
    </item>
</layer-list>