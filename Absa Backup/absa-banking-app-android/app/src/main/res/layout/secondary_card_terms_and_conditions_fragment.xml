<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.barclays.absa.common.PDFView
        android:id="@+id/secondaryCardTermsAndConditionsPdfView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/acceptTermsCheckBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <styleguide.forms.CheckBoxView
        android:id="@+id/acceptTermsCheckBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:attribute_description="@string/secondary_card_terms_and_conditions_confirmation"
        app:attribute_is_error_visible="false"
        app:attribute_is_required="true"
        app:layout_constraintBottom_toTopOf="@+id/continueButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <styleguide.buttons.Button
        android:id="@+id/continueButton"
        style="@style/PrimaryButton"
        android:layout_width="0dp"
        android:text="@string/continue_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>