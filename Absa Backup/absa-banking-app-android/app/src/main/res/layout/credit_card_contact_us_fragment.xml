<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/fraudTitleTextView"
            style="@style/NormalTextMediumDark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/medium_space"
            android:text="@string/credit_card_hub_customer_fraud_hotline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <styleguide.content.ContactView
            android:id="@+id/southAfricaContactView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_space"
            app:attribute_contact_name="@string/credit_card_hub_south_africa"
            app:attribute_contact_number="@string/credit_card_hub_south_africa_fraud_number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fraudTitleTextView" />

        <styleguide.content.ContactView
            android:id="@+id/internationalContactView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:attribute_contact_name="@string/credit_card_hub_international"
            app:attribute_contact_number="@string/credit_card_hub_international_fraud_number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/southAfricaContactView" />

        <View
            android:id="@+id/fraudDividerView"
            style="@style/DividerView"
            android:layout_width="0dp"
            android:layout_marginTop="@dimen/small_space"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/internationalContactView" />

        <TextView
            android:id="@+id/techTitleTextView"
            style="@style/NormalTextMediumDark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/medium_space"
            android:text="@string/credit_card_hub_technical_hotline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fraudDividerView" />

        <styleguide.content.ContactView
            android:id="@+id/techLineContactView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:attribute_contact_name="@string/credit_card_hub_south_africa"
            app:attribute_contact_number="@string/credit_card_hub_technical_number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/techTitleTextView" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>