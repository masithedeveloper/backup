<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fingerprintAuthDialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/fingerprintAuthPermissionHeader"
        style="@style/LargeTextRegularDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/medium_space"
        android:layout_marginStart="@dimen/medium_space"
        android:layout_marginTop="@dimen/medium_space"
        tools:text="@string/fingerprint_auth_permission_header" />

    <TextView
        android:id="@+id/fingerprintAuthPermissionContent"
        style="@style/NormalTextRegularDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/medium_space"
        android:layout_marginStart="@dimen/medium_space"
        android:layout_marginTop="@dimen/tiny_space"
        android:text="@string/fingerprint_auth_permission_content"
        android:textColor="@color/dark_silver" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/medium_space"
        android:layout_marginStart="@dimen/medium_space"
        android:layout_marginTop="@dimen/medium_space"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fingerprintIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_fingerprint" />

        <TextView
            android:id="@+id/fingerprintAuthErrorIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_space"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:text="@string/text_fingerprint_dialog_subtext"
            android:textColor="@color/grey_light_theme_color" />
    </LinearLayout>

    <TextView
        android:id="@+id/fingerprintAuthCancelText"
        style="@style/LargeTextRegularDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/medium_space"
        android:layout_marginEnd="@dimen/medium_space"
        android:layout_marginStart="@dimen/medium_space"
        android:layout_marginTop="@dimen/double_medium_space"
        android:text="@string/cancel"
        android:textAllCaps="true"
        android:textColor="@color/pink" />

</LinearLayout>