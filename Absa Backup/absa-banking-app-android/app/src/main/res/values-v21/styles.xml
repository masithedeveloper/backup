<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:filterTouchesWhenObscured">true</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:colorPrimaryDark">@color/purple</item>
        <item name="android:colorPrimary">@color/bright_purple</item>
        <item name="android:colorSecondary">@color/grey</item>
        <item name="android:textColorPrimary">@color/color_FFFFFFFF</item>
        <item name="android:windowBackground">@color/color_FFFFFFFF</item>
        <item name="android:colorAccent">@color/bright_purple</item>
        <item name="android:colorControlHighlight">@color/purple</item>
        <item name="android:alertDialogTheme">@style/Theme_Custom_Dialog_Alert</item>
        <item name="android:windowAnimationStyle">@style/CustomAnimation.Activity</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyAlertDialog" parent="android:Theme.Material.Light.Dialog.Alert">
        <item name="android:colorAccent">@color/pink</item>
    </style>

    <style name="CustomAnimation.Activity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/fade_activity_in</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_activity_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_activity_in</item>
        <item name="android:activityCloseExitAnimation">@anim/fade_activity_out</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/pink</item>
        <item name="android:buttonStyle">@style/WindowButtonStyle</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColorPrimary">@color/color_FF414042</item>
        <item name="android:windowTitleStyle">@style/WindowTitleStyle</item>
        <item name="android:windowBackground">@drawable/material_dialog</item>
    </style>

    <style name="CalenderDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:dialogTheme">@style/Theme_Custom_Dialog</item>
        <item name="colorAccent">@color/pink</item>
    </style>

    <style name="MyDialogThemeWhite" parent="MyDialogTheme">
        <item name="android:windowBackground">@drawable/material_dialog</item>
    </style>

    <style name="CardCalenderDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:dialogTheme">@style/Theme_Custom_Dialog</item>
        <item name="colorAccent">@color/color_960074A6</item>
    </style>

    <style name="WindowTitleStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/color_FF000000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WindowButtonStyle" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/pink</item>
    </style>

</resources>
