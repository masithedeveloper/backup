<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:filterTouchesWhenObscured">true</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:colorPrimary">@color/bright_purple</item>
        <item name="android:colorPrimaryDark">@color/purple</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:colorAccent">@color/bright_purple</item>
        <item name="android:colorControlHighlight">@color/purple</item>
        <item name="android:alertDialogTheme">@style/Theme_Custom_Dialog_Alert</item>
        <item name="android:windowAnimationStyle">@style/CustomAnimation.Activity</item>
        <item name="android:tint">@color/white</item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Theme.Design.BottomSheetDialog">
        <item name="android:windowBackground">@android:color/background_dark</item>
    </style>

    <style name="AppWelcomeTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:colorPrimary">@color/bright_purple</item>
        <item name="android:colorPrimaryDark">@android:color/background_dark</item>
        <item name="android:colorAccent">@color/bright_purple</item>
        <item name="android:textColorPrimary">@color/color_FFFFFFFF</item>
        <item name="android:alertDialogTheme">@style/Theme_Custom_Dialog_Alert</item>
        <item name="android:colorControlHighlight">@color/color_881075A5</item>
        <item name="android:windowAnimationStyle">@style/CustomAnimation.Activity</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorAccent">@color/pink</item>
        <item name="android:buttonStyle">@style/WindowButtonStyle</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:windowTitleStyle">@style/WindowTitleStyle</item>
        <item name="android:background">?android:colorBackground</item>
    </style>

    <style name="WindowTitleStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme_Custom_Dialog_Alert" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:windowTitleStyle">@style/DialogWindowTitle.Custom</item>
        <item name="android:background">?android:colorBackground</item>
    </style>

    <style name="TextAppearance.Custom.DialogWindowTitle" parent="@android:style/TextAppearance.Holo.DialogWindowTitle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CalenderDialogTheme" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorAccent">@color/pink</item>
        <item name="android:background">?android:colorBackground</item>
        <item name="android:buttonStyle">@style/WindowButtonStyle</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">?android:windowBackground</item>
    </style>

    <style name="EditText_Password" parent="@style/Text_Body">
        <item name="android:layout_marginTop">@dimen/dimen_4dp</item>
        <item name="android:layout_marginStart">@dimen/dimen_4dp</item>
        <item name="android:layout_marginBottom">@dimen/dimen_4dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_4dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/password_edittext_selection</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:enabled">false</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:textColorHint">@color/color_FF999999</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:maxLength">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="RatingBar" parent="@android:style/Widget.RatingBar">
        <item name="colorControlActivated">@color/color_FFFFFFFF</item>
        <item name="colorControlNormal">@color/tabIndicator</item>
    </style>

    <style name="BottomSheetOptionsDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorControlHighlight">@color/bright_purple</item>
    </style>
</resources>