<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="360">

    <shape
        android:innerRadiusRatio="2.6"
        android:shape="ring"
        android:thickness="@dimen/dimen_4dp"
        android:useLevel="false">

        <gradient
            android:centerColor="@color/color_FFE3E3E3"
            android:endColor="@color/color_FFFFFFFF"
            android:startColor="@color/color_FF999999"
            android:type="sweep"
            android:useLevel="false" />
    </shape>
</rotate>

