<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <size
                        android:width="200dp"
                        android:height="9dp" />
                    <solid android:color="@color/color_00000000" />
                </shape>
            </item>
            <item
                android:bottom="4dp"
                android:top="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/color_00000000" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <layer-list>
                <item>
                    <shape android:shape="rectangle">
                        <size
                            android:width="200dp"
                            android:height="9dp" />
                        <solid android:color="@color/color_00000000" />
                    </shape>
                </item>
                <item
                    android:bottom="4dp"
                    android:top="4dp">
                    <shape android:shape="rectangle">
                        <solid android:color="@color/color_FF999999" />
                    </shape>
                </item>
            </layer-list>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <layer-list>
                <item>
                    <shape android:shape="rectangle">
                        <size
                            android:width="200dp"
                            android:height="9dp" />
                        <solid android:color="@color/color_00000000" />
                    </shape>
                </item>
                <item
                    android:bottom="4dp"
                    android:top="4dp">
                    <shape android:shape="rectangle">
                        <solid android:color="@color/color_FF374154" />
                    </shape>
                </item>
            </layer-list>
        </clip>
    </item>

</layer-list>