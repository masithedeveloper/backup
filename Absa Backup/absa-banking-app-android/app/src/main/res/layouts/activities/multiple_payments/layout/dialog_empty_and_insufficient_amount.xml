<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dimen_16dp">

    <TextView
        android:id="@+id/tv_title"
        style="@style/Text_ActionMedium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/insufficient_fund_dialog_title"
        android:textColor="@color/graphite_light_theme_item_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_message_one"
        style="@style/Text_Caption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:text="@string/insufficient_fund_dialog_message_one"
        android:textColor="@color/graphite_light_theme_item_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <ImageView
        android:id="@+id/iv_insufficient_amount_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:contentDescription="@string/dialog_insufficient_balance_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_message_one"
        app:srcCompat="@drawable/ic_insufficient_icon" />

    <TextView
        android:id="@+id/tv_message_two"
        style="@style/Text_Caption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:text="@string/insufficient_fund_dialog_message_two"
        android:textColor="@color/graphite_light_theme_item_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_insufficient_amount_image" />

    <TextView
        android:id="@+id/tv_ok_got"
        style="@style/Text_Body"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:text="@string/ok_got_it"
        android:textColor="@color/color_FF374154"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_message_two" />
</androidx.constraintlayout.widget.ConstraintLayout>