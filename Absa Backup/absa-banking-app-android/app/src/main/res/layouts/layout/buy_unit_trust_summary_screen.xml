<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ScrollView">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <styleguide.content.SecondaryContentAndLabelView
            android:id="@+id/selectedFundContentAndLabelView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:attribute_secondary_label="@string/buy_unit_trust_summary_selected_fund"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:attribute_secondary_content="Absa Prime Equity Fund" />

        <styleguide.content.SecondaryContentAndLabelView
            android:id="@+id/investmentMethodContentAndLabelView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:attribute_secondary_label="@string/buy_unit_trust_investment_method"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/selectedFundContentAndLabelView"
            tools:attribute_secondary_content="Debit order" />

        <styleguide.content.SecondaryContentAndLabelView
            android:id="@+id/debitOrderAccountContentAndLabelView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:attribute_secondary_label="@string/buy_unit_trust_summary_debit_account"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/investmentMethodContentAndLabelView"
            tools:attribute_secondary_content="Current account - 404789767" />

        <styleguide.content.SecondaryContentAndLabelView
            android:id="@+id/debitDayContentAndLabelView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:attribute_secondary_label="@string/buy_unit_trust_summary_debit_day"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/debitOrderAccountContentAndLabelView"
            tools:attribute_secondary_content="1" />

        <styleguide.content.SecondaryContentAndLabelView
            android:id="@+id/debitOrderAmountContentAndLabelView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:attribute_secondary_label="@string/buy_unit_trust_summary_debit_amount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/debitDayContentAndLabelView"
            tools:attribute_secondary_content="R 200.00 per month" />

        <styleguide.content.SecondaryContentAndLabelView
            android:id="@+id/yearlyIncreaseContentAndLabelView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:attribute_secondary_label="@string/buy_unit_trust_summary_automatic_increase"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/debitOrderAmountContentAndLabelView"
            tools:attribute_secondary_content="10%" />

        <styleguide.content.SecondaryContentAndLabelView
            android:id="@+id/lumpSumAmountContentAndLabelView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:attribute_secondary_label="@string/amount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/yearlyIncreaseContentAndLabelView"
            tools:attribute_secondary_content="10%" />

        <styleguide.content.SecondaryContentAndLabelView
            android:id="@+id/employmentStatusContentAndLabelView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:attribute_secondary_label="@string/risk_based_approach_employment_status"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lumpSumAmountContentAndLabelView"
            tools:attribute_secondary_content="Full time" />

        <styleguide.content.SecondaryContentAndLabelView
            android:id="@+id/occupationContentAndLabelView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:attribute_secondary_label="@string/buy_unit_trust_occupation_header"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/employmentStatusContentAndLabelView"
            tools:attribute_secondary_content="Student" />

        <styleguide.content.SecondaryContentAndLabelView
            android:id="@+id/sourceOfFundsContentAndLabelView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:attribute_secondary_label="@string/source_of_funds"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/occupationContentAndLabelView"
            tools:attribute_secondary_content="Salary / Wages" />

        <styleguide.content.SecondaryContentAndLabelView
            android:id="@+id/incomeFromInvestmentContentAndLabelView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:attribute_secondary_label="@string/buy_unit_trust_summary_income_from_investment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sourceOfFundsContentAndLabelView"
            tools:attribute_secondary_content="Pay into my account" />

        <styleguide.content.SecondaryContentAndLabelView
            android:id="@+id/selectedAccountContentAndLabelView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:attribute_secondary_label="@string/buy_unit_trust_summary_selected_account"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/incomeFromInvestmentContentAndLabelView"
            tools:attribute_secondary_content="Current Account - 4048898834" />

        <styleguide.content.SecondaryContentAndLabelView
            android:id="@+id/registeredForTaxSAContentAndLabelView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:attribute_secondary_label="@string/buy_unit_trust_tax_registered_for_sa_tax"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/selectedAccountContentAndLabelView"
            tools:attribute_secondary_content="Yes" />

        <styleguide.content.SecondaryContentAndLabelView
            android:id="@+id/saIncomeTaxNumberContentAndLabelView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:attribute_secondary_label="@string/buy_unit_trust_tax_income_tax_number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/registeredForTaxSAContentAndLabelView"
            tools:attribute_secondary_content="123123231223" />

        <styleguide.content.SecondaryContentAndLabelView
            android:id="@+id/registeredForForeignTaxContentAndLabelView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:attribute_secondary_content="@string/yes"
            app:attribute_secondary_label="@string/buy_unit_trust_tax_registered_for_foreign_tax"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/saIncomeTaxNumberContentAndLabelView" />

        <styleguide.content.SecondaryContentAndLabelView
            android:id="@+id/foreignTaxNumberContentAndLabelView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:attribute_secondary_label="@string/buy_unit_trust_tax_foreign_tax_number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/registeredForForeignTaxContentAndLabelView"
            tools:attribute_secondary_content="12312312312123" />

        <styleguide.content.SecondaryContentAndLabelView
            android:id="@+id/foreignTaxCountryContentAndLabelView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:attribute_secondary_label="@string/buy_unit_trust_tax_foreign_tax_country"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/foreignTaxNumberContentAndLabelView"
            tools:attribute_secondary_content="Bahamas" />

        <View
            android:id="@+id/dividerView"
            style="@style/DividerView"
            android:layout_width="0dp"
            android:layout_marginStart="@dimen/medium_space"
            android:layout_marginTop="@dimen/small_space"
            android:layout_marginEnd="@dimen/medium_space"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/foreignTaxCountryContentAndLabelView" />

        <TextView
            android:id="@+id/pleaseNoteTextView"
            style="@style/SmallTextMediumDark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_space"
            android:layout_marginTop="@dimen/medium_space"
            android:layout_marginEnd="@dimen/medium_space"
            android:text="@string/please_note"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dividerView" />

        <TextView
            android:id="@+id/pleaseNoteBodyTextView"
            style="@style/SmallTextRegularDark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_space"
            android:layout_marginTop="@dimen/medium_space"
            android:layout_marginEnd="@dimen/medium_space"
            android:text="@string/unit_trust_please_note_body"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pleaseNoteTextView" />

        <styleguide.buttons.Button
            android:id="@+id/continueButton"
            style="@style/PrimaryButton"
            android:layout_width="0dp"
            android:text="@string/continue_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pleaseNoteBodyTextView"
            app:layout_constraintVertical_bias="1" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>