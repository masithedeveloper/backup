<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Holo">
        <item name="android:windowNoTitle">true</item>
        <item name="android:alertDialogTheme">@style/Theme_Custom_Dialog_Alert</item>
        <item name="android:dialogTheme">@style/Theme_Custom_Dialog</item>
        <item name="android:editTextStyle">@style/editText</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/pink</item>
        <item name="android:buttonStyle">@style/WindowButtonStyle</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColorPrimary">@color/color_FF414042</item>
        <item name="android:windowTitleStyle">@style/WindowTitleStyle</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="CalenderDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="colorAccent">@color/pink</item>
    </style>

    <style name="WindowTitleStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/color_FF000000</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>